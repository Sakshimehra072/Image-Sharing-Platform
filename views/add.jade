include ./partials/header

div.w-full.min-h-screen.bg-zinc-800.px-10.py-5.text-white
  h1.text-xl Create a new Post
  hr.opacity-10.mt-3
  form(action='/createpost', method='post', enctype='multipart/form-data')
    input(type='file', name='postimage', class='block w-1/3 px-3 py-2')
    input(type='text', placeholder='Title', name='title', class='block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black')
    textarea(type= 'text', placeholder='Description',name='description', class='block w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black')
    input(type='submit', value='Create Post', class='block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md')

include ./partials/footer
