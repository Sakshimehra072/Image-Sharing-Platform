include ./partials/header.jade
div.w-full.min-h-screen.bg-zinc-800.px-10.py-8.text-white
    .cards.flex.flex-wrap.gap-10
        each elem in posts
            .card.w-32.h-50
                .w-full.h-40.bg-zinc-800.rounded-lg.overflow-hidden
                    img(class="w-full h-full object-cover", src=`/images/uploads/${elem.image}`)
                 h5.mt-2.text-sm= elem.title
                 h6.text-xs.opacity-500 @#{elem.user.username}

include ./partials/footer.jade
